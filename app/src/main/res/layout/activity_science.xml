<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff59d">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.oluwatimilehin.fivethings.ScienceActivity"
        >

        <TextView
            style="@style/headings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facts about science"
            />

        <View
            style="@style/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />

        <TextView
            style="@style/did_you_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/science_image"
            style="@style/fact_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/dog"
            />

        <TextView
            android:id="@+id/science_fact"
            style="@style/fact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is a prototype text"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            >

            <Button
                style="@style/previous_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/science_previous"
                android:onClick="previousScienceFact"
                />

            <Button
                android:id="@+id/science_next"
                style="@style/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="nextScienceFact"
                />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>